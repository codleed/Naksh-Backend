# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/naksh"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (optional)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# JWT Configuration (for future authentication implementation)
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# File Upload Configuration (for future implementation)
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH="./uploads"

# Push Notification Configuration (for future implementation)
FCM_SERVER_KEY="your-firebase-server-key"
APNS_KEY_ID="your-apns-key-id"
APNS_TEAM_ID="your-apns-team-id"

# Email Configuration (for future implementation)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Redis Configuration (for future caching implementation)
REDIS_URL="redis://localhost:6379"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"